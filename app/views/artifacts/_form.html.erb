<div class="row">
  <div class="col-md-6">
    <%= form_with(model: artifact) do |form| %>
      <% if artifact.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(artifact.errors.count, "error") %> prohibited this artifact from being saved:</h2>

          <ul>
            <% artifact.errors.each do |error| %>
