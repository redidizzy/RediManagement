<% if current_user %>
  <h3>Organization: <%= ActsAsTenant.current_tenant.name %></h3>

<% else %>
  <div class="jumbotron">
    <h2>Welcome to Redi management SaaS app</h2>
    <p class="lead">
      You'll love managing our project with our SaaS app, Take a look at our plans ! 
    </p>
  </div>
  <div class="container">
    <div class="plans clearfix">
      <div class="col-lg-3 col-lg-offset-3 plan">
        <h2>Free plan</h2>
        <div class="price pull-right">
          FREE ! 
        </div>
        <div class="features">
          <ul>
            <li>Unlimited file uploads</li>
            <li>Responsive design</li>
            <li>Access anywhere</li>
            <li>1 project</li>  
          </ul>
        </div>
        <p>
          <%= link_to 'Sign up', new_user_registration_path(plan: 'free'), class: 'btn btn-primary sign-up' %>  
        </p>
      </div>
      <div class="col-lg-3 col-lg-offset-3 plan">
        <h2>Premium plan</h2>
        <div class="price pull-right">
          Price: $10
        </div>
        <div class="features">
          <ul>
            <li>Unlimited file uploads</li>
            <li>Responsive design</li>
            <li>Access anywhere</li>
            <li class="extra">Unlimited projects</li>  
          </ul>
        </div>
        <p>
          <%= link_to 'Sign up', new_user_registration_path(plan: 'premium'), class: 'btn btn-primary sign-up' %>  
        </p>
      </div>
    </div>
  </div>
<% end %>
